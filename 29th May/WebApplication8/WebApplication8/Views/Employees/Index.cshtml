@model IEnumerable<WebApplication8.Models.Employee>

@{
    ViewData["Title"] = "Index";
    
    var tableBoxBackground = "https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=800&q=80";
}

<h1 style="color: #fff; text-shadow: 1px 1px 8px #222;">Index</h1>

<p>
    <a asp-action="Create" style="color: #ffd700; font-weight: 500;">Create New</a>
</p>

<div class="employee-table-box">
    <table class="table table-dark table-striped table-bordered mb-0">
        <thead>
            <tr>
                <th style="color: #fff;">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="color: #fff;">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th style="color: #fff;">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="color: #fff;">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="color: #fff;">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="color: #fff;">
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" style="color: #ffd700;">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" style="color: #ffd700;">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" style="color: #ffd700;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .employee-table-box {
        background-image: url('@tableBoxBackground');
        background-size: cover;
        background-position: center;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.4);
        padding: 2rem 1.5rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
        overflow-x: auto;
    }

        .employee-table-box table {
            background: rgba(34,34,34,0.92);
            border-radius: 12px;
            overflow: hidden;
        }

        .employee-table-box th,
        .employee-table-box td {
            color: #fff !important;
            vertical-align: middle;
        }

        .employee-table-box a {
            color: #ffd700;
            font-weight: 500;
            text-decoration: underline;
        }

            .employee-table-box a:hover {
                color: #fff700;
                text-decoration: none;
            }
</style>
